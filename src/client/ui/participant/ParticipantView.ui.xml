<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:DockLayoutPanel unit="EM" width="100%" height="100%">

            <g:north size="13">
                <g:HTMLPanel ui:field="northPanel" styleName="center northPanel">
                    <g:HorizontalPanel styleName="container" width="100%" height="100%">

                        <g:Image url="https://www.vcta.dk/~/media/VCTA18/Web_Baggrund_logo/Logo/Logo_web4-01.ashx" height="10em" ui:field="logoImg"/>

                        <g:HorizontalPanel horizontalAlignment="ALIGN_DEFAULT" verticalAlignment="ALIGN_BOTTOM" height="100%">
                            <g:HorizontalPanel  verticalAlignment="ALIGN_MIDDLE" styleName="menuBox"
                                                horizontalAlignment="ALIGN_CENTER" >
                                <g:Button ui:field="myProfileBtn" >Min profil</g:Button>
                            </g:HorizontalPanel>


                            <g:HorizontalPanel  verticalAlignment="ALIGN_MIDDLE" styleName="menuBox"
                                                horizontalAlignment="ALIGN_CENTER" >
                                <g:Button ui:field="statistiskBtn">Statistik</g:Button>
                            </g:HorizontalPanel>

                            <g:HorizontalPanel  verticalAlignment="ALIGN_MIDDLE" styleName="menuBox hidden"
                                                horizontalAlignment="ALIGN_CENTER" ui:field="createTeamBox">
                                <g:Button ui:field="createTeamBtn" styleName="">Opret Hold</g:Button>
                            </g:HorizontalPanel>

                            <g:HorizontalPanel  verticalAlignment="ALIGN_MIDDLE" styleName="menuBox hidden"
                                                horizontalAlignment="ALIGN_CENTER" ui:field="myTeamBox">
                                <g:Button ui:field="myTeamBtn" styleName="">Mit Hold</g:Button>
                            </g:HorizontalPanel>

                            <g:HorizontalPanel  verticalAlignment="ALIGN_MIDDLE" styleName="menuBox hidden"
                                                horizontalAlignment="ALIGN_CENTER" ui:field="changeTeamBox">
                                <g:Button ui:field="changeTeamBtn" styleName="">Rediger dit hold</g:Button>
                            </g:HorizontalPanel>

                            <g:HorizontalPanel  verticalAlignment="ALIGN_MIDDLE" styleName="menuBox"
                                                horizontalAlignment="ALIGN_CENTER" >
                                <g:Button ui:field="logoutBtn">Log ud</g:Button>
                            </g:HorizontalPanel>

                        </g:HorizontalPanel>
                    </g:HorizontalPanel>

                </g:HTMLPanel>

            </g:north>

            <g:center size="20">

                <g:HTMLPanel ui:field="centerPanel" styleName="center centerPanel" width="100%" height="100%">
                    <g:DeckLayoutPanel ui:field="centerDeck" width="100%" height="100%"></g:DeckLayoutPanel>
                </g:HTMLPanel>

            </g:center>

            <g:south size="5">
                <g:HTMLPanel ui:field="southPanel" styleName="center southPanel" width="100%" height="100%">
                    <g:HTML><a href="https://www.cyklistforbundet.dk/">Cyklistforbundet</a></g:HTML>
                </g:HTMLPanel>
            </g:south>

        </g:DockLayoutPanel>
    </g:HTMLPanel>
</ui:UiBinder>